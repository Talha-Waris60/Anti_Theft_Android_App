<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <Button
        android:id="@+id/buttonPocketRemoval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_pocket_removal_detection"
        app:layout_constraintBottom_toTopOf="@id/buttonChargerRemoval"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonChargerRemoval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_charger_removal_detection"
        app:layout_constraintBottom_toTopOf="@id/buttonMotionDetection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonPocketRemoval" />

    <Button
        android:id="@+id/buttonMotionDetection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_motion_detection"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonChargerRemoval" />

</androidx.constraintlayout.widget.ConstraintLayout>